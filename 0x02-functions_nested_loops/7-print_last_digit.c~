#include "main.h"
/**
 * print_last_digit: Entry point printing last digit
 * Description: a function that prints the last digit of a number.
 *
 * @n: this is an integer
 *
 * Return: an integer
 */
int print_last_digit(int n)
{
int r;
if (n < 0)
{
r = -1 * (n % 10);
_putchar(r + '0');
return (r);
}
else
{
r = n % 10;
_putchar(r + '0');
return (n);
}
}
